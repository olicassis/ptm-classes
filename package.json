{
  "name": "ptm-classes",
  "main": "src/index.ts",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint '{src,tests}/**/*.{js,ts,tsx}'",
    "lint:fix": "eslint '{src,tests}/**/*.{js,ts,tsx}' --fix",
    "lint-staged": "lint-staged",
    "swagger": "ts-node src/swagger.ts",
    "migration:create": "typeorm migration:create",
    "migrations": "typeorm migration:run -d ./dist/db/dataSource.js",
    "migrations:revert": "typeorm migration:revert -d ./dist/db/dataSource.js",
    "seed": "ts-node src/db/seeds.ts",
    "test": "jest"
  },
  "lint-staged": {
    "*.ts": [
      "eslint '{src,tests}/**/*.{js,ts,tsx}' --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "npm@9.7.2",
  "workspaces": [
    "app/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "19.3.0",
    "@commitlint/config-conventional": "19.2.2",
    "@types/express": "^4.17.21",
    "@types/jest": "29.5.12",
    "@types/node": "^20.14.12",
    "@types/sinon": "^17.0.3",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "7.14.1",
    "@typescript-eslint/parser": "7.14.1",
    "@vercel/style-guide": "5.2.0",
    "concurrently": "^8.2.2",
    "eslint": "8",
    "eslint-config-prettier": "9.1.0",
    "eslint-config-turbo": "2.0.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-only-warn": "1.1.0",
    "eslint-plugin-prettier": "5.1.3",
    "husky": "9.0.11",
    "jest": "29.7.0",
    "lint-staged": "15.2.7",
    "mock-typeorm": "^1.0.0",
    "nodemon": "^3.1.4",
    "prettier": "3.3.2",
    "sinon": "^18.0.0",
    "supertest": "^7.0.0",
    "swagger-autogen": "^2.23.7",
    "swagger-ui-express": "^5.0.1",
    "ts-jest": "29.1.5",
    "ts-node": "^10.9.2"
  },
  "dependencies": {
    "@faker-js/faker": "^8.4.1",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "pg": "^8.12.0",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.20",
    "typeorm-extension": "^3.6.0"
  }
}
